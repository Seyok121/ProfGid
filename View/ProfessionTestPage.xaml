<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:ProfGid.ViewModel"
             x:Class="ProfGid.View.ProfessionTestPage" BackgroundColor="#00664F">

    <ContentPage.BindingContext>
        <viewmodel:ProfessionTestViewModel/>
    </ContentPage.BindingContext>

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="Title" TargetType="Label">
                <Setter Property="FontSize" Value="32"/>
                <Setter Property="TextColor" Value="Black"/>
                <Setter Property="FontFamily" Value="RubikMonoOne-Regular"/>
            </Style>
            <Style x:Key="QuestionIndex" TargetType="Label">
                <Setter Property="TextColor" Value="Black"/>
                <Setter Property="FontSize" Value="32"/>
                <Setter Property="FontAttributes" Value="Bold"/>
            </Style>
            <Style x:Key="Question" TargetType="Label">
                <Setter Property="TextColor" Value="Black"/>
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="FontAttributes" Value="Bold"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="0.5*"/>
                <RowDefinition Height="0.1*"/>
            </Grid.RowDefinitions>

            <!--Белый задний фон-->
            <BoxView Grid.Row="0" Grid.RowSpan="3" BackgroundColor="White"
                  CornerRadius="20,20,0,0"/>
            <!--Номер вопроса-->
            <BoxView Grid.Row="0" BackgroundColor="#2EA889" 
                     VerticalOptions="Start" HorizontalOptions="Center" 
                     HeightRequest="65" WidthRequest="200" CornerRadius="12"
                     Margin="10"/>
            <Label Grid.Row="0" Style="{StaticResource QuestionIndex}" Text="{Binding CurrentQuestionIndex}"
                   VerticalOptions="Start" HorizontalOptions="Center"
                   Margin="10,20"/>
            <!--Заголовок-->
            <Label Style="{StaticResource Title}" Text="ПрофГид" Grid.Row="2"
                Margin="15,15" HorizontalOptions="Center"/>
            <!--Вопрос и ответы-->
            <StackLayout Grid.Row="0" Grid.RowSpan="2" Padding="20" Spacing="20">
                <Label Style="{StaticResource Question}" Text="{Binding CurrentQuestion.Text}"
                       Margin="0,70,0,0"/>
            <!--Варианты ответов-->
                <VerticalStackLayout Spacing="10">
                    <RadioButton Content="{Binding CurrentQuestion.Answers[0].Text}"
                                 Value="0" TextColor="Black"
                                 GroupName="AnswersGroup"
                                 CheckedChanged="RadioButton_CheckedChanged"/>
                    <RadioButton Content="{Binding CurrentQuestion.Answers[1].Text}"
                                 Value="1" TextColor="Black"
                                 GroupName="AnswersGroup"
                                 CheckedChanged="RadioButton_CheckedChanged"/>
                    <RadioButton Content="{Binding CurrentQuestion.Answers[2].Text}"
                                 Value="2" TextColor="Black"
                                 GroupName="AnswersGroup"
                                 CheckedChanged="RadioButton_CheckedChanged"/>
                </VerticalStackLayout>
            </StackLayout>
        </Grid>
    </ScrollView>
</ContentPage>